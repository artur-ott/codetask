# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index
GET     /login                      controllers.Auth.login
GET     /logout                     controllers.Auth.logout
GET     /register                   controllers.Auth.register
GET     /dashboard                  controllers.Application.dashboard
GET     /course/:courseName         controllers.Application.course(courseName: String)
POST    /submit                     controllers.Auth.submit
POST    /authenticate               controllers.Auth.authenticate


# Course Infos
GET     /courses/json                   controllers.Application.coursesJSON
GET     /course/json/:courseName        controllers.Application.courseJSON(courseName: String)
GET     /solutions/json/:courseName     controllers.Application.solutionsJSON(courseName: String)

# User Options
GET     /course/subscribe/:courseName      controllers.Application.courseSubscribe(courseName: String)
GET     /course/unsubscribe/:courseName    controllers.Application.courseUnsubscribe(courseName: String)
#POST    /user/solutions/:solutions         controllers.Application.updateSolutions(solutions: String)


#tests
GET     /test                       controllers.Application.test
GET     /testInterpret/:code        controllers.Application.testInterpret(code: String)
POST    /solution                   controllers.Application.solution
#POST    /interpret                 controllers.Application.interpret

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
