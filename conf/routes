# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page navigation
GET     /login                      controllers.Auth.login
GET     /logout                     controllers.Auth.logout
GET     /register                   controllers.Auth.register
GET     /                           controllers.Application.index
GET     /dashboard                  controllers.Application.dashboard
GET     /course/:courseId           controllers.Application.course(courseId: Long)

# User API
POST    /submit                     controllers.Auth.submit
POST    /authenticate               controllers.Auth.authenticate
GET     /subscribe/:courseId        controllers.Application.subscribe(courseId: Long)
GET     /unsubscribe/:courseId      controllers.Application.unsubscribe(courseId: Long)

# Data API
GET     /courses                    controllers.Application.coursesJson
GET     /courses/:courseId          controllers.Application.courseJson(courseId: Long)
POST    /courses/new                controllers.Application.storeCourseJson()
DELETE  /courses/:courseId          controllers.Application.deleteCourse(courseId: Long)
POST    /solutions/:courseId        controllers.Application.storeSolutionJson(courseId: Long)
GET     /solutions/:courseId        controllers.Application.solutionsJson(courseId: Long)

#POST    /interpreter/:courseName/:chapterName/:taskName    controllers.Application.interpreteCode(courseName: String, chapterName: String, taskName: String)


#tests
GET     /test                       controllers.Application.test
POST     /testInterpret        controllers.Application.testInterpret
#POST    /interpret                 controllers.Application.interpret

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
